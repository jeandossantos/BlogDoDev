{
  "openapi": "3.0.3",
  "info": {
    "title": "BlogDoDev API",
    "description": "API para integração com o backend do blog.",
    "termsOfService": "http://localhost:3001/terms",
    "contact": {
      "name": "Dev Support",
      "email": "example@example.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Api de Desenvolvimento"
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "summary": "Register a user",
        "description": "This route registers a user",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserRegister"
              },
              "examples": {
                "user": {
                  "value": {
                    "username": "John Smith",
                    "email": "john@example.com",
                    "password": "123456",
                    "confirmPassword": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "description": "User already exists!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              }
            }
          },
          "201": {
            "description": "The user was created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Payload"
                },
                "examples": {
                  "payload": {
                    "value": {
                      "id": "954e7533-b918-40fd-97c2-fa9ceadca254",
                      "username": "John Smith",
                      "email": "john@example.com",
                      "password": "123456",
                      "confirmPassword": "123456",
                      "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
                    }
                  }
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                },
                "examples": {
                  "error": {
                    "value": {
                      "code": 500,
                      "message": "Unexpected error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Authenticate user",
        "description": "This route authenticates a user.",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthInfo"
              },
              "examples": {
                "credentials": {
                  "value": {
                    "email": "john@example.com",
                    "password": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Email or password incorrect"
          },
          "200": {
            "description": "Authenticated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Payload"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UserRegister": {
        "type": "object",
        "properties": {
          "username": { "type": "string" },
          "email": { "type": "string" },
          "password": { "type": "string" },
          "confirmPassword": { "type": "string" }
        }
      },
      "AuthInfo": {
        "type": "object",
        "properties": {
          "email": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "Payload": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "username": { "type": "string" },
          "email": { "type": "string" },
          "token": { "type": "string" }
        }
      },
      "ErrorModel": {
        "type": "object",
        "properties": {
          "code": { "type": "integer" },
          "message": { "type": "string" }
        }
      }
    }
  }
}
